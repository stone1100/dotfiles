alias ls='logo-ls'
alias la='logo-ls -A'
alias ll='logo-ls -alh'
# equivalents with Git Status on by Default
alias lsg='logo-ls -D'
alias lag='logo-ls -AD'
alias llg='logo-ls -alD'
